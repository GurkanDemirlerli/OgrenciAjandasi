<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/ders_dznl_adi_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="Adi"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/ders_dznl_sinif_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ders_dznl_adi_edt"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="Sinif"
        android:inputType="date" />



    <Spinner
        android:id="@+id/saat_spinner"
        android:layout_width="155dp"
        android:layout_height="41dp"
        android:layout_below="@+id/ders_dznl_kaydet_btn"
        android:layout_alignEnd="@+id/ders_dznl_kaydet_btn"
        android:layout_alignRight="@+id/ders_dznl_kaydet_btn"
        android:layout_marginTop="16dp"
        />

    <Spinner
        android:id="@+id/gun_spinner"
        android:layout_width="155dp"
        android:layout_height="41dp"
        android:layout_below="@+id/ders_dznl_sil_btn"
        android:layout_alignEnd="@+id/ders_dznl_sil_btn"
        android:layout_alignRight="@+id/ders_dznl_sil_btn"
        android:layout_marginTop="16dp"
        />


    <EditText
        android:id="@+id/ders_dznl_ogr_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ders_dznl_sinif_edt"

        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="Öğretmen"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/ders_dznl_kaydet_btn"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ders_dznl_ogr_edt"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="210dp"
        android:layout_marginRight="210dp"
        android:layout_marginBottom="16dp"
        android:text="Kaydet" />

    <Button
        android:id="@+id/ders_dznl_sil_btn"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ders_dznl_ogr_edt"
        android:layout_alignEnd="@+id/ders_dznl_adi_edt"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="16dp"
        android:text="Sil"
        android:layout_alignRight="@+id/ders_dznl_adi_edt"
        android:layout_marginRight="0dp" />

    <Button
        android:id="@+id/ders_dznl_ders_saati_ekle_btn"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@+id/saat_spinner"
        android:layout_alignStart="@+id/saat_spinner"
        android:layout_alignLeft="@+id/saat_spinner"
        android:layout_marginTop="16dp"
        android:text="Ekle" />



    <ListView
        android:id="@+id/ders_saati_listview"
        android:layout_marginTop="450dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
 />

</RelativeLayout>