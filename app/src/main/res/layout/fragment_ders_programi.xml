<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="Orientation">

    <android.support.design.widget.TabLayout

        android:id="@+id/ders_programi_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        app:tabIndicatorColor="@android:color/background_light"
        app:tabTextColor="@android:color/background_light"
        android:layout_alignParentLeft="true">


        <android.support.design.widget.TabItem
            android:id="@+id/tab_pzt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PZT" />

        <android.support.design.widget.TabItem
            android:id="@+id/tab_sal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAL" />

        <android.support.design.widget.TabItem
            android:id="@+id/tab_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ã‡AR" />

        <android.support.design.widget.TabItem
            android:id="@+id/tab_per"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PER" />

        <android.support.design.widget.TabItem
            android:id="@+id/tab_cum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CUM" />
    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/ders_programi_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ders_programi_tabs"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp" />

</RelativeLayout>